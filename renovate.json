{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "enabled": true,
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "flux": {
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "kubernetes",
        "helm-values",
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "breaking-change"
      ]
    }
  ]
}
