{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "kubernetes": {
    "fileMatch": ["\\.yaml$", "\\.yml$"]
  },
  "flux": {
    "fileMatch": ["\\.yaml$", "\\.yml$"]
  },
  "helm-values": {
    "fileMatch": ["\\.yaml$", "\\.yml$"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "labels": ["breaking-change"],
      "ignoreFutureUpdates": true
    }
  ]
}
