{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "kubernetes": {
    "enabled": true,
    "managerFilePatterns": ["/\\.ya?ml$/"]
  },
  "helm-values": {
    "managerFilePatterns": ["/\\.ya?ml$/"]
  },
  "flux": {
    "managerFilePatterns": ["/\\.ya?ml$/"]
  },
  "packageRules": [
    { "matchUpdateTypes": ["patch"], "addLabels": ["dep-update", "patch"] },
    { "matchUpdateTypes": ["minor"], "addLabels": ["dep-update", "minor"] },
    { "matchUpdateTypes": ["major"], "addLabels": ["dep-update", "major"] }
  ]
}
